<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="124dp"
    android:layout_height="226dp"
    android:layout_marginRight="20dp">

        <ImageView
            android:id="@+id/aroundZatchImage"
            android:layout_width="124dp"
            android:layout_height="112dp"
            android:scaleType="fitXY" />

    <TextView
        android:id="@+id/aroundShortInfoTitle"
        android:layout_width="124dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:text="2022년 호랑이의 해 기념 호랑이 몰랑이 세트"
        android:textColor="@color/black_85"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/aroundZatchImage" />

    <TextView
        android:id="@+id/aroundShortInfoRegion"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginTop="4dp"
        android:text="서초구 양재동"
        android:textColor="@color/black_20"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/aroundShortInfoTitle" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="1.7dp"
        android:layout_height="12dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintLeft_toRightOf="@id/aroundShortInfoRegion"
        app:layout_constraintTop_toBottomOf="@id/aroundShortInfoTitle"
        app:layout_constraintTop_toTopOf="@id/aroundShortInfoRegion"
        app:srcCompat="@drawable/drawble_main_page_little_circle" />

    <TextView
        android:id="@+id/aroundShortInfoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="1시간 전"
        android:textColor="@color/black_20"
        android:textSize="10dp"
        app:layout_constraintLeft_toRightOf="@id/imageView9"
        app:layout_constraintTop_toBottomOf="@id/aroundShortInfoTitle"
        app:layout_constraintTop_toTopOf="@id/aroundShortInfoRegion" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:layout_marginTop="12dp"
        android:text="교환을 원하는 재치"
        android:textColor="@color/black_85"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/aroundShortInfoRegion" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:text="몰랑이 피규어"
        android:textColor="@color/zatch_purple"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textView21" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/selector_heart_button_purple"
        android:button="@null"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView21" />

</androidx.constraintlayout.widget.ConstraintLayout>