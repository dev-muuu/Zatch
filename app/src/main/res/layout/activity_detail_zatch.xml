<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/imgbox"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_img">
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="my Item"/>
        <ImageView
            android:id="@+id/switchImg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/horizontal_switch_light"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/name"/>
        <TextView
            android:id="@+id/want"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="your_Item"
            android:layout_toRightOf="@+id/switchImg"/>
    </RelativeLayout>

</RelativeLayout>