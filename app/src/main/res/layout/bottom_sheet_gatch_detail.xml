<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_anchorGravity="top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/detailEntire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="160dp"
                android:background="@drawable/bottom_sheet_top_line"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <RelativeLayout
                android:id="@+id/r0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/view">

                <TextView
                    android:id="@+id/textView54"
                    style="@style/bottomSheetTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="재치 마라샹" />

                <android.widget.Button
                    android:id="@+id/gatchDetailExitButton"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/cancel"
                    android:visibility="invisible" />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c1"
                style="@style/gatchDetailLayoutMargin"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/r0">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c2"
                style="@style/gatchDetailLayoutMargin"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/c1">

                <TextView
                    android:id="@+id/textView57"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/text_background_yellow_14"
                    android:text="음식"
                    android:textColor="@color/zatch_deepyellow"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textView58"
                    style="@style/GatchTimer"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:text="00:58"
                    android:textSize="12dp"
                    app:layout_constraintLeft_toRightOf="@id/textView57"
                    app:layout_constraintTop_toTopOf="@id/textView57" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/c3"
                style="@style/gatchDetailLayoutMargin"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/c2"
                tools:layout_editor_absoluteX="20dp">

                <RelativeLayout
                    android:id="@+id/r1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView59"
                        style="@style/gatchDetailSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="카테고리" />

                    <TextView
                        android:id="@+id/textView60"
                        style="@style/gatchDetailContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textView59"
                        android:text="음식 | 조리" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/r1">

                    <TextView
                        android:id="@+id/textView61"
                        style="@style/gatchDetailSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인원" />

                    <TextView
                        android:id="@+id/textView62"
                        style="@style/gatchDetailContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textView61"
                        android:text="5명" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/r2">

                    <TextView
                        android:id="@+id/textView63"
                        style="@style/gatchDetailSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="금액" />

                    <TextView
                        android:id="@+id/textView64"
                        style="@style/gatchDetailContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textView63"
                        android:text="20000"
                        android:textColor="@color/black_20" />

                    <TextView
                        android:id="@+id/textView55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/textView64"
                        android:text="→" />

                    <TextView
                        android:id="@+id/textView56"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@id/textView55"
                        android:text="4000" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/r4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/r3">

                    <TextView
                        android:id="@+id/textView65"
                        style="@style/gatchDetailSubTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="빈 자리는" />

                    <TextView
                        android:id="@+id/textView66"
                        style="@style/gatchDetailContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/textView65"
                        android:text="모인 인원들과 1/n 할게요" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <RelativeLayout
                android:id="@+id/chattingMoreEtcLayout"
                style="@style/gatchDetailLayoutMargin"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/c3"
                tools:layout_editor_absoluteX="20dp">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/black_20" />

                <TextView
                    android:id="@+id/textView67"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/imageView3"
                    android:text="행복한 호랑이"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/textView68"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/textView67"
                    android:text="·"
                    android:textColor="@color/black_20" />

                <TextView
                    android:id="@+id/textView69"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/textView68"
                    android:text="중계동"
                    android:textColor="@color/black_20"
                    android:textSize="13dp" />
            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <androidx.core.widget.NestedScrollView-->
        <!--            android:id="@+id/detailNestedScrollView"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:fillViewport="true"-->
        <!--            app:layout_constraintTop_toBottomOf="@id/detailEntire"-->
        <!--            app:layout_constraintVertical_bias="0.0">-->

        <TextView
            android:id="@+id/gatchDetailMultilineText"
            style="@style/gatchDetailLayoutMargin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:text="재치 마랴샹궈 가치하실 분 구해요! 맵기 1단계입니다! "
            android:textColor="@color/black_85"
            android:textSize="14dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/detailEntire"
            tools:layout_editor_absoluteX="20dp" />
        <!--        </androidx.core.widget.NestedScrollView>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/gatchDetailMultilineText"
            app:layout_constraintVertical_bias="1.0">

            <android.widget.Button
                android:id="@+id/button"
                style="@style/ZatchYellowButton_74"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="24dp"
                android:text="가치 신청하기" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>