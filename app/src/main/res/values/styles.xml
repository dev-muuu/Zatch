<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="PickerTheme">
        <item name="fontFamily">@font/pretendard_bold</item>
    </style>
    <style name="NumberPicker" parent="PickerTheme">
        <item name="fontFamily">@font/pretendard_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:color">@color/black_85</item>
        <item name="android:textColorPrimary">@color/black_85</item>
        <item name="editTextColor">@color/black_85</item>
<!--        <item name="android:textColorSecondary">@color/black_10</item>-->
        <item name="colorControlNormal">#00000000</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="CustomAlertDialog">
        <!-- 꽉 채운 화면에 배경 없이 (custom view 영역만 보일 것이다.) -->
        <item name="android:windowBackground">@android:color/transparent</item>

        <!-- Dialog 가 센터에 나오도록 하자. -->
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="CustomCheckBoxZatchSearch">
        <item name="android:background">@drawable/selector_search_pick_zatch</item>
        <item name="android:textColor">@drawable/selelctor_search_textcolor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13dp</item>
    </style>

<!--    bottomsheet my zatch custom-->
    <style name="CustomButtonMyZatchBottomSheet">
        <item name="android:background">@drawable/selector_change_search_my_zatch_background</item>
        <item name="android:textColor">@drawable/selector_change_search_my_zatch_text</item>
        <item name="font">@font/pretendard_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!--    bottomsheet want zatch custom-->
    <style name="CustomButtonWantZatchBottomSheet">
        <item name="android:background">@drawable/selector_change_search_want_zatch_background</item>
        <item name="android:textColor">@drawable/selector_change_search_want_zatch_text</item>
        <item name="font">@font/pretendard_medium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
    </style>

    <!--    bottomSheetDialog corner radius 적용-->
    <style name="ModalBottomSheetDialog" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ModalShape</item>
    </style>

    <style name="ModalShape" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">28dp</item>
    </style>>

</resources>