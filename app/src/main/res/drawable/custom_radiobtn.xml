<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <shape android:shape="oval">
                <size android:height="14.5dp" android:width="14.5dp"/>
                <stroke android:width="1dp" android:color="@color/black_85"/>
            </shape>
            <shape android:shape="oval">
                <size android:height="9.3dp" android:width="9.3dp"/>
                <solid android:color="@color/zatch_purple"/>
            </shape>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <shape android:shape="oval">
            <size android:height="14.5dp" android:width="14.5dp"/>
            <stroke android:width="1dp" android:color="@color/black_85"/>
        </shape>
    </item>
</selector>