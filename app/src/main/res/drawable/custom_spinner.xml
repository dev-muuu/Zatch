<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item
                android:bottom ="1dp"
                android:left ="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <stroke android:color="@color/black_85"
                        android:width="1dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/icon_down"
                android:gravity="center|end"
                android:width="24dp"
                android:height="24dp">
            </item>
        </layer-list>
    </item>
</selector>